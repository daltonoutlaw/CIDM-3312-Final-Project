@page
@model CIDM_3312_Final_Project_1.Pages.Teams.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.team_name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.team_name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Wins)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Wins)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Losses)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Losses)
        </dd>
        @foreach(var r in Model.Team.Players)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => r.player_name)
            </dt>
            <dd class="col-sm-10">
                <strong>@Html.DisplayFor(model => r.player_name): </strong> ERA: @Html.DisplayFor(model => r.ERA) AVG: @Html.DisplayFor(model => r.AVG)
                <br>
                <div class="row">
                    <div class="col-sm-auto">
                        <a asp-page="UpdatePlayer" asp-route-id="@r.PlayerID" class="btn btn-primary btn-sm">Update This Player</a>
                    </div>
                    <div class="col-sm-auto">
                        <form method="post">
                            <input type="hidden" asp-for="PlayerIDToDelete" value="@r.PlayerID">
                            <input type="submit" asp-page-handler="DeletePlayer" asp-route-id="@Model.Team.TeamID" value="Delete Review" class="btn btn-danger btn-sm">
                        </form>
                    </div>
                </div>
            </dd>

        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Team.TeamID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
